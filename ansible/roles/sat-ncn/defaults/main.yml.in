# Default variables for sat-ncn role.
---
sat_repos:
  - name: sat-sle-15sp2
    # Really this is the URI, but the zypper_repository module uses "repo"
    repo: "https://packages.local/repository/sat-sle-15sp2"
    # Value replaced by runBuildPrep.sh
    disable_gpg_check: @DISABLE_GPG_CHECK@
    disable_repo_gpg_check: yes

sat_packages:
  - cray-sat-podman
  - docs-sat

sat_container_image_version: "@SAT_VERSION@"
sat_container_image_version_directory: "/opt/cray/etc/sat/"
sat_container_image_version_file: "version"
sat_config_file: "/root/.config/sat/sat.toml"
